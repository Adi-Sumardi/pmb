# Application Environment
APP_NAME="PPDB YAPI"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-domain.com

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=daily,security,activity,payment,audit
LOG_LEVEL=info
LOG_DAILY_DAYS=30

# Database Configuration (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=ppdb_yapi
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8
DB_SSLMODE=require
DB_TIMEOUT=60

# Redis Configuration (for caching and sessions)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3
REDIS_CLUSTER=redis
REDIS_PREFIX=ppdb_yapi_
REDIS_PERSISTENT=true
REDIS_SERIALIZER=php
REDIS_COMPRESSION=lz4
REDIS_READ_TIMEOUT=5
REDIS_TIMEOUT=5

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=ppdb_

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=strict
SESSION_TIMEOUT_WARNING=10

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Security Settings
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_SECURE_COOKIES=true
SECURE_HEADERS=true

# File Storage
FILESYSTEM_DISK=local
STORAGE_PATH=/var/www/ppdb/storage

# Payment Gateway (Xendit)
XENDIT_SECRET_KEY=your_xendit_secret_key_here
XENDIT_WEBHOOK_TOKEN=your_xendit_webhook_token_here
XENDIT_ENVIRONMENT=live

# Rate Limiting
RATE_LIMIT_API=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_UPLOAD=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_SCHEDULE="0 2 * * *"

# Monitoring
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
TELESCOPE_ENABLED=false

# AWS S3 for backups (optional)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=your_backup_bucket

# API Configuration
API_MAX_REQUEST_SIZE=10485760
API_MAX_REQUESTS_PER_MINUTE=60
API_TIMEOUT=30
API_REQUIRE_HTTPS=true
API_ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"
API_MAX_FILE_SIZE=5242880
API_SCAN_UPLOADS=true

# Performance Optimization
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M
PHP_MAX_FILE_UPLOADS=20

# Redis Performance
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=5
REDIS_READ_TIMEOUT=5

# Database Performance
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=300
DB_STATEMENT_TIMEOUT=30000

# Monitoring and Alerts
MONITORING_ENABLED=true
PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=300
ALERT_EMAIL=admin@your-domain.com
AWS_BUCKET=ppdb-yapi-backups

# Additional Security
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true