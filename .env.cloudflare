# Production Environment Configuration for Cloudflare
# Copy this file to .env for production deployment

# Application
APP_NAME="PMB YAPI Al Azhar 2026/2027"
APP_ENV=production
APP_KEY=base64:E0Vc5TA9P6oYfnL8Fix17rfFXQiYVX2QJXzKXSN6y+c=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (PostgreSQL for production)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=ppdb_yapi_production
DB_USERNAME=ppdb_user
DB_PASSWORD=your_secure_password_here

# Session Configuration (Optimized for Cloudflare)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# Broadcasting
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=database

# Cache (Redis recommended for production behind Cloudflare)
CACHE_STORE=redis
CACHE_PREFIX=ppdb_

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Cloudflare Specific Settings
CLOUDFLARE_ENABLED=true
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Rate Limiting (Enhanced for Cloudflare)
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_ONLY=false

# Performance
VIEW_CACHE_ENABLED=true
ROUTE_CACHE_ENABLED=true
CONFIG_CACHE_ENABLED=true
